<!DOCTYPE HTML>
<html>
  <head>
    <title>Emberbase &ndash; Signin</title>
    <link rel="icon" type="image/png" href="/static/img/logo_small.png" />
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/interface.css">
  </head>
  <body>
    <div class="container">
      <div id="signin-div">
        <div class="row">
          <div class="col-lg-offset-4 col-lg-3 align-center">
            <img src="/static/img/logo_large.png"/>
            <h2>Emberbase</h2>
            <hr/>
            <% if (error) { %>
              <div class="alert alert-danger">Invalid username or password</div>
            <% } %>
            <form role="form" method="POST">
              <div class="form-group">
                <input type="text" class="form-control" id="signin-username" placeholder="Username" name="ebUsername" value="<%= user?user:'' %>"/>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" id="signin-password" placeholder="Password" name="ebPassword" value="<%= pass?pass:'' %>"/>
              </div>
              <button type="submit" class="btn btn-default">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
